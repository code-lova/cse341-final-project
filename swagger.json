      "delete": {
        "tags": [
          "Users"
        ],
        "summary": "Delete a Users.",
        "description": "Deletes a User from the database by ID. Will Requires Google OAuth2 authentication",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the Users to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Users deleted successfully"
